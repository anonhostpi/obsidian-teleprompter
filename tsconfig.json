{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "esnext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": false,
    "isolatedModules": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["dom", "es6", "scripthost", "es2022"],
    "types": ["vite/client"]
  },
  "include": ["**/*.ts", "**/*.vue"]
}
